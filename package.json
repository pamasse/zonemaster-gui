{
  "name": "zonemaster-gui",
  "version": "3.1.0",
  "license": "MIT",  
  "repository": {
    "type": "git",
    "url": "https://github.com/pamasse/zonemaster-gui.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "node scripts/faq.js && ng build --prod",
    "build:release": "npm run build && node scripts/create_release.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e --port=4201",
    "check-dep": "david",
    "release": "dotenv release-it"
    },
  "lint-staged": {
    "*.{ts,js,json,md,scss,html}": [
      "prettier --config .prettierrc --write"
    ],
    "*.ts": [
      "tslint --fix"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --config commitlint.config.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && ng lint",
      "post-merge": "post-npm-install"
    }
  },  
  "release-it": {
    "github": {
      "release": true,
      "draft": true,
      "requireBranch": "develop",
      "assets": ["./*.zip"]
    }
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^9.1.0",
    "@angular/common": "^9.1.0",
    "@angular/compiler": "^9.1.0",
    "@angular/core": "^9.1.0",
    "@angular/forms": "^9.1.0",
    "@angular/localize": "^9.1.0",
    "@angular/platform-browser": "^9.1.0",
    "@angular/platform-browser-dynamic": "^9.1.0",
    "@angular/router": "^9.1.0",
    "@ng-bootstrap/ng-bootstrap": "^6.0.2",
    "@ngx-translate/core": "^12.1.2",
    "@ngx-translate/http-loader": "^4.0.0",
    "bootstrap": "^4.3.1",
    "core-js": "^3.2.1",
    "file-saver": "^2.0.2",
    "font-awesome": "^4.7.0",
    "github-fork-ribbon-css": "^0.2.1",
    "moment": "^2.22.2",
    "ngx-moment": "^3.0.1",
    "rxjs": "^6.5.3",
    "showdown": "^1.9.1",
    "tslib": "^1.10.0",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.901.0",
    "@angular/cli": "^9.1.0",
    "@angular/compiler-cli": "^9.1.0",
    "@angular/language-service": "^9.1.0",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/file-saver": "^2.0.1",
    "@types/jasmine": "^3.4.2",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^13.11.0",
    "archiver": "^4.0.1",
    "browserstack-local": "^1.3.7",
    "codelyzer": "^5.0.1",
    "commitlint": "^8.3.5",
    "david": "^12.0.0",
    "dotenv-cli": "^3.1.0",
    "husky": "^4.2.5",
    "jasmine-core": "^3.5.0",
    "jasmine-spec-reporter": "^5.0.1",
    "karma": "^5.0.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^3.1.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "lint-staged": "^10.1.7",
    "nightwatch": "^1.0.19",
    "npm-post-install": "0.0.2",
    "ntypescript": "^1.201706190042.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "protractor": "^5.4.2",
    "protractor-image-comparison": "^3.6.0",
    "release-it": "^13.5.5",
    "stylelint": "^13.3.3",
    "ts-node": "^8.4.1",
    "tslint": "^6.1.1",
    "tslint-angular": "^3.0.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3",
    "webdriver-manager": "^12.1.7"
  }
}
